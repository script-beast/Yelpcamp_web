<% layout('/layouts/boilerplate') %>
    <div class="row">
        <h1 class="col-6 offset-3">Edit Campgrounds</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds/<%= campgrounds._id %>?_method=PUT" method="POST" novalidate
                class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input type="text" id='title' class="form-control" value='<%= campgrounds.title %>'
                        name="campground[title]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input type="text" class="form-control" id='location' value='<%= campgrounds.location %>'
                        name="campground[location]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3 custom-file">
                    <label for="image" class="form-label">Image</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                    <span class="custom-file-label"></span>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text">$</span>
                        <input type="number" class="form-control" id='price' value='<%= campgrounds.price %>'
                            name="campground[price]" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea type="text" class="form-control" id='description' name="campground[description]"
                        required><%= campgrounds.description %></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <% campgrounds.images.forEach(function (img, i) { %>
                        <img src="<%= img.tumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="image-<%= i %>">Delete</label>
                        <br>
                        <% }) %>
                </div>
                <div class="mb-3">
                    <button class="btn btn-warning">Update Campground</button>
                </div>
            </form>
            <a class="btn btn-info" href="/campgrounds/<%= campgrounds._id %>">Back To Campground</a>
        </div>
    </div>