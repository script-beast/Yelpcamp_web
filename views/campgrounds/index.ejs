<% layout('/layouts/boilerplate') %>
    <div id="cluster-map"></div>
    <!-- <h1>All Campgrounds</h1> -->
    <br>
    <br>
        <% for (let camp of campgrounds) {%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if(camp.images.length ) { %>
                            <img src="<%= camp.images[0].url %>" class="img-fluid">
                            <% } else { %>
                                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/No_image_available.svg/1024px-No_image_available.svg.png"
                                    class="img-fluid">
                                <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= camp.title %>
                            </h5>
                            <p class="card-text">
                                <%= camp.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= camp.location %>
                                </small>
                            </p>
                            <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>">More Details</a>
                        </div>
                    </div>
                </div>
            </div>
            <% }%>
    <script>
        const mapToken = '<%- process.env.MAPBOX_TOKEN %>'
        const campgroundmap = {features: <%- JSON.stringify(campgrounds) %>}
      </script>
    <script src="/javascripts/clusterMap.js"></script>